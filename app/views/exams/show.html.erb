<div class="row">
  <h1><%= @exam.category.name %></h1>
  <h2><%= t "results" %>: <%= @exam.mark %></h2>
  <%= form_for [@category, @exam] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <ul class="bxslider">
      <%= f.fields_for :results do |builder| %>
        <%= render "exam_form", f: builder %>
      <% end %>
    </ul>
  <% end %>
</div>
