<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".test_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".help"), help_path %></li>
          <% if user_signed_in? && current_user.admin? %>
            <li><%= link_to t("categories"), admin_categories_path %></li>
            <li><%= link_to t("questions"), admin_questions_path %></li>
            <li><%= link_to t("users"), admin_users_path %></li> 
          <% else %>
            <li><%= link_to t("categories"), categories_path %></li>
          <% end %>
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
              </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t("link_edit"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".sign_out"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".sign_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
